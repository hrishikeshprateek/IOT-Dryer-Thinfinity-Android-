<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="#3C3B3B"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#3C3B3B"
            android:layout_marginStart="10dp"/>


        <TextView
            android:id="@+id/topic1"
            android:text="LAST RECIPE"
            android:background="#D5D5D5"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#3C3B3B"/>


        <TextView
            android:id="@+id/topic2"
            android:text="CURRENT STATE"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:background="#D5D5D5"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#3C3B3B"/>


        <TextView
            android:id="@+id/topic3"
            android:text="BOOT TIME"
            android:layout_width="0dp"
            android:background="#D5D5D5"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#3C3B3B"
            android:layout_marginEnd="10dp"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginHorizontal="10dp"
        android:background="#3C3B3B"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#3C3B3B"
            android:layout_marginStart="10dp"/>


        <TextView
            android:id="@+id/value1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Target 1"
            android:padding="5dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#3C3B3B"/>


        <TextView
            android:id="@+id/value2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Target 2"
            android:padding="5dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#3C3B3B"/>


        <TextView
            android:id="@+id/value3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Target 3"
            android:padding="5dp"
            android:maxLines="1"
            android:layout_weight="1"/>

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#3C3B3B"
            android:layout_marginEnd="10dp"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="5dp"
        android:background="#3C3B3B"/>


</LinearLayout>