<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".users.fragments.About">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/logo_Top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="7dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp"
                android:padding="5dp"
                android:src="@mipmap/ic_launcher_round"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:civ_border_width="3dp"
                android:padding="5dp"
                android:elevation="4dp"
                app:civ_border_color="#ffff"
                app:civ_circle_background_color="#03A9F4"
                android:layout_marginStart="-30dp"
                android:src="@drawable/logo_tf"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/logo_Top">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp">


                    <TextView
                        android:id="@+id/pakage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="monospace"
                        android:textSize="17sp"
                        android:text="@string/app_name"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/pakage"
                        android:layout_marginTop="25dp"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/appname"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="Package name"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/appnwmeval"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="com.thundersharp"
                            android:textStyle="normal"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/nv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/l1"
                        android:layout_marginTop="10dp"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/s"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="Version name"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/vername"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="Version name"
                            android:textStyle="normal"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/s2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/nv"
                        android:layout_marginTop="10dp"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="Version code"
                            android:layout_marginStart="10dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/vercode"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="Version code"
                            android:textStyle="normal"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/s2"
                        android:layout_marginTop="10dp"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Reinforcement"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/renforcement"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="No Reinforcement"
                            android:textStyle="normal"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/rf"
                        android:layout_marginTop="10dp"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="Min SDK ver"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/minsdk"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="Version code"
                            android:textStyle="normal"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tarsdk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/mins"
                        android:layout_marginTop="10dp"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="Target SDK ver"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/targetsdk"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="Version code"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/tarsdk"
                        android:layout_marginTop="10dp"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="UID"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/uid"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="000000"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sys"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/ui"
                        android:layout_marginTop="10dp"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="System app"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/sysapp"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_below="@id/sys"
                        android:background="#4C4B4B"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"/>


                    <LinearLayout
                        android:id="@+id/lay8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/view"
                        android:layout_marginTop="10dp"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="First installed on"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/firstinstall"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="Dateval"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:fontFamily="monospace" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lay9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/lay8"
                        android:layout_marginTop="10dp"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="Last upgraded"
                            android:layout_marginStart="10dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/lastupg"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="dateval"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:fontFamily="monospace" />

                    </LinearLayout>


                    <View
                        android:id="@+id/view1"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_below="@id/lay9"
                        android:background="#4C4B4B"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"/>


                    <TextView
                        android:id="@+id/per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All permissions requested"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:fontFamily="monospace"
                        android:layout_below="@id/view1"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/perholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="All permissions requested"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="monospace"
                        android:layout_below="@id/per"
                        android:textSize="15sp"

                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"/>


                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>
    </RelativeLayout>

    
</androidx.core.widget.NestedScrollView>