<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/containermain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users.ui.activities.ProfileActivity"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:elevation="4dp"
                app:layout_collapseMode="pin" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:id="@+id/top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toStartOf="@id/profilepic"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/profile_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/allerta"
                                android:maxLines="1"
                                android:text="Hi,--"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="22sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/profile_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/calibri"
                                android:text="---"
                                android:textStyle="bold"
                                android:textAlignment="viewStart"
                                android:textColor="#D1D1D1"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/phone_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Phone: ---"
                                android:textAlignment="viewStart"
                                android:textColor="#D1D1D1"
                                android:textSize="13sp"
                                android:textStyle="normal" />


                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profilepic"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#ffffff"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/cards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/top"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:minHeight="80dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/wallet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="80dp"
                            app:cardBackgroundColor="#17191E"
                            app:cardCornerRadius="7dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/your_devices"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_your_devices"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textColor="#BDBDBD"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Your devices"
                                    android:textColor="#BDBDBD"
                                    android:textSize="13sp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/plans"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="80dp"
                            app:cardBackgroundColor="#17191E"
                            app:cardCornerRadius="7dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/private_rec"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_private_rec"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textColor="#BDBDBD"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Private Recipes"
                                    android:textColor="#BDBDBD"
                                    android:textSize="13sp" />

                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/dinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="80dp"
                            app:cardBackgroundColor="#17191E"
                            app:cardCornerRadius="7dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/jobsheets"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_jobsheets"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textColor="#BDBDBD"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/jobsheets"
                                    android:textColor="#BDBDBD"
                                    android:textSize="13sp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/email_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cards"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="10dp"
                        android:drawableStart="@drawable/ic_outline_info_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/calibri"
                        android:gravity="center_vertical"
                        android:text="To add missing details in your profile click on Update data above, updated profiles makes checkouts easier."
                        android:textColor="#F4E880"
                        app:drawableTint="#F4E880" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bulls" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/custom_gradient_bottom"
                        android:elevation="4dp" />

                </FrameLayout>
            </RelativeLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1e2026"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:overScrollMode="ifContentScrolls"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">

            <RelativeLayout
                android:id="@+id/topiconholder"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_curved_white_top"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="46dp"
                    android:elevation="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:id="@+id/accountStat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_outline_tips_and_updates_24"
                            android:contentDescription="@string/manager"
                            app:tint="#435ABE" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Acc Status"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/suggestion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/outline_manage_accounts_24" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Your Manager"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="12sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/failed_txn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/round_mode_standby_24"
                            android:contentDescription="@string/update_data" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Update data"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="12sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/settings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:tint="#435ABE"
                            android:src="@drawable/ic_outline_admin_panel_settings_24" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginTop="5dp"
                            android:text="App Settings"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottomHolderprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topiconholder"
                android:layout_marginTop="-45dp"
                android:background="@drawable/top_curved"
                android:elevation="7dp">


                <LinearLayout
                    android:id="@+id/qq"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/recent_tranxn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="20dp"
                            android:focusable="true"
                            android:clickable="true"
                            app:cardUseCompatPadding="true"
                            >
                            <LinearLayout
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="7dp"
                                android:background="@null"
                                android:orientation="horizontal"
                                android:baselineAligned="false">

                                <LinearLayout
                                    android:id="@+id/address_cont"
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="120dp"
                                    android:background="@drawable/curve_bg"
                                    android:elevation="5dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginTop="10dp"
                                        app:tint="#04041B"
                                        android:src="@drawable/outline_home_work_24" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginTop="5dp"
                                        android:textStyle="bold"
                                        android:text="@string/your_address"
                                        android:gravity="center"
                                        android:textColor="#000" />

                                    <TextView
                                        android:id="@+id/text_address"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:maxLines="4"
                                        android:ellipsize="end"
                                        android:gravity="center"
                                        android:textColor="#616161"
                                        android:text="--" />



                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/report_issue"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:background="@drawable/curve_bg"
                            android:layout_marginStart="7dp"
                            android:gravity="center"
                            android:layout_marginEnd="7dp"
                            android:backgroundTint="#3F51B5"
                            >
                            <TextView
                                android:id="@+id/yourDevices"
                                android:layout_above="@+id/descText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:textColor="#ffffff"
                                android:textSize="35sp"
                                android:gravity="center"
                                android:text="@string/dash"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/descText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:text="Public Recipe count"
                                android:layout_marginTop="5dp"
                                android:textColor="#fff"
                                android:textStyle="bold"
                                />


                        </LinearLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:elevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="20dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="10dp"
                            android:background="@null"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/newservice"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:background="@drawable/top_curve"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/outline_contact_support_24"
                                    app:tint="#fff" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/purchasedservice"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="-40dp"
                                android:background="@drawable/curve_bg"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginTop="10dp"
                                    app:tint="#04041B"
                                    android:src="@drawable/ic_baseline_password_24" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold"
                                    android:text="@string/support_center"
                                    android:gravity="center"
                                    android:textColor="#000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginTop="7dp"
                                    android:gravity="center"
                                    android:textColor="#616161"
                                    android:text="View All your active/solved cases or create a new request." />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    app:tint="#04041B"
                                    android:src="@drawable/ic_baseline_toll_24" />


                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/rate"
                    android:layout_below="@+id/qq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="50dp"
                    android:orientation="vertical"
                    android:background="@drawable/edittext_curved"
                    android:elevation="4dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#2B2C2E"
                            android:text="Rate us"
                            android:drawableStart="@drawable/ic_baseline_star_outline_24"
                            android:drawablePadding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textSize="17sp"/>


                        <TextView
                            android:id="@+id/rate_us"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:text="Open play store"
                            android:textColor="#ff975d"
                            android:textSize="13sp" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:text="Click above to open play store and appreciate us by giving 5 Star ratings !"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/logout"
                    android:layout_below="@id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="50dp"
                    android:orientation="vertical"
                    android:background="@drawable/edittext_curved"
                    android:elevation="4dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#2B2C2E"
                            android:text="Logout"
                            android:drawableStart="@drawable/ic_baseline_logout_24"
                            android:drawablePadding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textSize="17sp"/>


                        <TextView
                            android:id="@+id/logoutn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="15dp"
                            android:textColor="#ff975d"
                            android:text="Click to Logout"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:textSize="13sp"/>


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:text="Click above to logout from this device or to switch accounts !!"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/switchw"
                    android:layout_below="@id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="50dp"
                    android:orientation="vertical"
                    android:background="@drawable/edittext_curved"
                    android:elevation="4dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:drawableStart="@drawable/ic_outline_swap_horizontal_circle_24"
                            android:drawablePadding="10dp"
                            android:text="Switch Account"
                            android:textColor="#2B2C2E"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/switch_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="15dp"
                            android:textColor="#ff975d"
                            android:text="Click to switch"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:textSize="13sp"/>


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:text="If you are a Employee and want to switch to your account then click here."
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_below="@id/switchw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="60dp">

                    <TextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/amaranth_bold_italic"
                        android:text="@string/app_name"
                        android:textColor="#9C9C9C"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tag"
                        android:layout_marginStart="-10dp"
                        android:layout_toEndOf="@id/tag"
                        android:fontFamily="@font/arizonia"
                        android:text="Powered by Thundersharp."
                        android:textColor="#A6A7A8"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="sans-serif-light"
                        android:text="V 2.1.89"
                        android:textSize="12sp"
                        android:textColor="#969697"
                        android:textStyle="bold" />

                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>